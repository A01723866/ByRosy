import material3Image from '../../../public/images/Material3.jpeg';
import material4Image from '../../../public/images/Material4.jpeg';

// Define los servicios en el frontmatter de Astro
const services = [
  {
    icon: "personalizado",
    title: "Conexión y Entendimiento",
    description: "A través de una entrevista personal, descubrimos tus gustos, hábitos, inspiración y frustraciones para crear una cocina que refleje tu estilo de vida de forma auténtica."
  },
  {
    icon: "ruler",
    title: "Diseño a Medida",
    description: "Diseños de cocina personalizados adaptados a tu estilo de vida, espacio y preferencias estéticas. Cada detalle meticulosamente planificado."
  },
  {
    icon: "quality",
    title: "Selección de Materiales",
    description: "Materiales seleccionados especialmente para ti, en armonía con tus gustos, estilo de vida y la combinación optima de lo mejor que existe en diseño y calidad."
  },
  {
    icon: "balanza",
    title: "Estética que trasciende",
    description: "Con un balance entre lo estético y funcional, creamos un espacio que une, conecta y da vida a los momentos especiales. Creando espacios que invitan a la convivencia entre familia y amigos."
  },
  {
    icon: "trophy",
    title: "Cercanía en todo momento",
    description: "En el momento en que decides iniciar tu cocina con nosotros, estamos contigo en cada paso. Atendemos cada detalle y resolvemos cualquier imprevisto con atención, calidez y compromiso, para que vivas una experiencia impecable, con el mejor servicio y el resultado que mereces."
  }
];

