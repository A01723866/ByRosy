---
import { Image } from 'astro:assets';
import Header from '../components/ui/Header';
import Contact from '../components/sections/Contact.astro';
import AboutSection from '../components/sections/AboutSection.astro';
import ServicesSection from '../components/sections/ServicesSection.astro';
import Portfolio from '../components/sections/Portfolio.astro';
import '../styles/global.css';

// Import the hero images
import heroImage from '../../public/images/Welcome.jpeg';

const SITE_TITLE = "ByRosy - Cocinas de Lujo en San Pedro | Cocinas Integrales VIP";
const SITE_DESCRIPTION = "Especialista en cocinas de lujo, cocinas integrales y electrodomésticos para cocinas en San Pedro Garza García. Más de 30 años creando espacios únicos y personalizados.";
const KEYWORDS = "cocinas san pedro, cocinas integrales, cocinas de lujo, cocinas fresas, cocinas vip, cocinas en sanpedro, electrodomesticos para cocinas, electrodomesticos, diseño de cocinas, cocinas personalizadas, cocinas modernas, cocinas premium, cocinas exclusivas";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={SITE_DESCRIPTION} />
		<meta name="keywords" content={KEYWORDS} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/R.svg" />
		<title>{SITE_TITLE}</title>
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://byrosy.com/cocinas-de-lujo" />
		<meta property="og:title" content={SITE_TITLE} />
		<meta property="og:description" content={SITE_DESCRIPTION} />
		<meta property="og:image" content="/images/Welcome.jpeg" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://byrosy.com/cocinas-de-lujo" />
		<meta property="twitter:title" content={SITE_TITLE} />
		<meta property="twitter:description" content={SITE_DESCRIPTION} />
		<meta property="twitter:image" content="/images/Welcome.jpeg" />
		
		<!-- Local Business Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "LocalBusiness",
			"name": "ByRosy - Cocinas de Lujo",
			"description": "Especialista en cocinas de lujo, cocinas integrales y electrodomésticos para cocinas en San Pedro Garza García",
			"url": "https://byrosy.com/cocinas-de-lujo",
			"telephone": "+52-81-xxxx-xxxx",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "San Pedro Garza García",
				"addressRegion": "Nuevo León",
				"addressCountry": "México"
			},
			"areaServed": "San Pedro Garza García, Monterrey, Área Metropolitana",
			"serviceType": ["Cocinas de Lujo", "Cocinas Integrales", "Diseño de Cocinas", "Electrodomésticos"]
		}
		</script>
		
		<!-- EmailJS carga simple y directa -->
		<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
		<script type="text/javascript">
			// Inicializar EmailJS con la clave pública
			(function() {
				emailjs.init("bmCsAVRUy8IyOpEpc");
			})();
		</script>
	</head>
	<body>
		<Header client:load />
		<main>
			<!-- Fixed background image -->
			<div id="bg-image" class="bg-image">
				<Image 
					src={heroImage} 
					alt="Cocinas de lujo por Rosy Santisteban" 
					width={2000}
					height={1300}
					class="w-full h-full object-cover"
				/>
				<div class="absolute inset-0 bg-black/40"></div>
			</div>

			<!-- Main Hero Section -->
			<section id="hero-section" class="parallax-section flex items-center justify-center pt-16 md:pt-24">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 text-center relative z-10">
					<div class="max-w-4xl mx-auto content-wrapper active" style="margin-top: 1rem;">
						<h1 
							class="text-4xl sm:text-4xl md:text-6xl lg:text-7xl text-white mb-4 sm:mb-6 leading-tight tracking-wider font-extralight"
							style="font-family: var(--font-family-tempting);"
						>
							ByRosy
						</h1>
						<h2 
							class="text-2xl md:text-3xl text-white/90 mb-6 sm:mb-8 max-w-2xl mx-auto leading-relaxed font-light"
							style="font-family: var(--font-family-playfair);"
						>
							Cocinas de Lujo en San Pedro
						</h2>
						<p 
							class="text-lg md:text-xl text-white/80 mb-8 sm:mb-10 max-w-3xl mx-auto leading-relaxed font-light"
							style="font-family: var(--font-family-inter);"
						>
                            Especialista diseñando cocinas integrales de lujo y espacios unicos con los mejores acabados, en materiales, cubiertas y electrodomésticos.
						</p>
						
						<!-- Navigation to other section -->
						<div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
							<a 
								href="/casas-sanpedro"
								class="section-nav-button"
							>
								<span class="btn-text">Gonzales Concreta</span>
								<span class="btn-subtitle">Bienes Raíces</span>
							</a>
						</div>
					</div>
				</div>
			</section>

			<!-- ByRosy Sections -->
			<div id="byrosy-sections" class="section-group active">
				<!-- About section -->
				<AboutSection />

				<!-- Services section -->
				<section id="services">
					<ServicesSection />
				</section>
				
				<section id="portfolio">
					<Portfolio />
				</section>
			</div>
			
			<!-- Contact Section -->
			<section id="contact">
				<Contact />
			</section>
		</main>
	</body>
</html> 